@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>
@using (@Html.BeginForm("Add", "Suppliers", FormMethod.Post, new {@class = "form-horizontal"}))
{
    <div class="form-group">
        @Html.Label("Name:")
        @Html.Editor("Name", new {htmlAttributes = new { @class = "form-control"}})
    </div>
    <div class="form-group">
        @Html.Label("isImporter","Name:")
        @Html.Editor("isImporter", new { htmlAttributes = new { type = "checkbox" } })
    </div>
    <div class="form-group">
        <input type="submit" class="form-control" value="Add" />
    </div>
}