@using CarDealer.Models.ViewModels.Supplier
@model IEnumerable<AllSupplierViewModel>

@{
    ViewBag.Title = "AllSuppliersForUser";
}

<h2>AllSuppliersForUser</h2>

<br />
@Html.ActionLink("New Supplier", "Add", null, new { @class = "btn btn-lg btn-primary"})

<br />
<br />

<table class="table table-striped">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.IsImporter)/th>
        <th>Actions</th>
    </tr>
    @foreach (var supplier in Model)
    {
        <tr>
            <td>@Html.DisplayFor(m => supplier.Name)</td>
            @if (supplier.IsImporter)
            {
                <td>Yes</td>
            }
            else
            {
                <td>No</td>
            }
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = @supplier.Id}, null)
                @Html.ActionLink("Delete", "Delete", new { id = @supplier.Id }, null)
            </td>
        </tr>
    }
</table>


