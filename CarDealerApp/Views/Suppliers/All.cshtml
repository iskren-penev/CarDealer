@using CarDealer.Models.ViewModels.Supplier
@model IEnumerable<SupplierViewModel>

@{
    ViewBag.Title = "Suppliers";
}

<h2>Supplliers - @ViewBag.SupplierType</h2>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
    </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfParts)
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Id)</td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfParts)
        </td>

    </tr>
}

</table>
