@using CarDealer.Models.ViewModels.Supplier
@model EditSupplierViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Supplier</h2>

@using (@Html.BeginForm("Edit", "Suppliers", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name, new { htmlAttribute = new { type = "text", @class = "form-control", value = @Model.Name } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.IsImporter)
        @Html.EditorFor(model => model.IsImporter, new
        {
            htmlAttributes = new
            {
                @class = "form-control",
                type = "checkbox"
            }
        })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Edit" />
    </div>
}
