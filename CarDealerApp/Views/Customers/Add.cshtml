@using CarDealer.Models.BindingModels
@model AddCustomerBindingModel

@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <form class="form-horizontal" method="post">
        <h4>Create new customer</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-sm-2">Name</label>
            <div class="col-md-10">
                <input class="form-control" name="Name" id="Name" type="text"  placeholder="Enter customer name..."/>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Birth Date</label>

            <div class="col-md-10">
                <input class="form-control" name="BirthDate" id="BirthDate" type="datetime" placeholder="Enter birthdate in format yyyy-mm-dd"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </form>
}

