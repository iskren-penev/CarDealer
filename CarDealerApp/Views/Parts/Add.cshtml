@using CarDealer.Models.BindingModels
@model AddPartBindingModel

@{
    ViewBag.Title = "Add Part";
}

<h2>Add Part</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form class="form-horizontal" method="post">
        <h4>Create new customer</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-sm-2">Name</label>
            <div class="col-md-10">
                <input class="form-control" name="Name" id="Name" type="text" placeholder="Enter part name..." />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Price</label>

            <div class="col-md-10">
                <input class="form-control" name="Price" id="Price" type="number" placeholder="Enter price" />
            </div>
        </div>
        
        <div class="form-group">
            <label class="control-label col-sm-2">Quantity</label>

            <div class="col-md-10">
                <input class="form-control" name="Quantity" id="Quantity" type="number" value="1" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </form>
}



